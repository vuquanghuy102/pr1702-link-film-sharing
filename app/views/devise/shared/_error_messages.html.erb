<% if @post.errors.any? %>
  <div id="error_explanation">
    <div class="alert alert-danger">
      <%= t(".the_form_contains") %><%= pluralize(@post.errors.count, "error") %>.
    </div>
    <ul>
    <% @post.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>
